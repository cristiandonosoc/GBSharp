<UserControl x:Class="GBSharp.View.MemoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:view="clr-namespace:GBSharp.View"
             xmlns:viewModel="clr-namespace:GBSharp.ViewModel;assembly=GBSharp.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <UserControl.Resources>
    <DataTemplate DataType="{x:Type viewModel:MemoryWordViewModel}">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="60"></ColumnDefinition>
          <ColumnDefinition Width="Auto"></ColumnDefinition>
          <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Address}" Style="{StaticResource NumericText}"></TextBlock>
        <TextBlock Grid.Column="1" Text=": " Style="{StaticResource NumericText}"></TextBlock>
        <TextBlock Grid.Column="2" Text="{Binding Value}" Style="{StaticResource NumericText}"></TextBlock>
      </Grid>

    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModel:MemoryFormatViewModel}">
      <Grid>
        <TextBlock Text="{Binding Name}"></TextBlock>
      </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModel:MemorySectionViewModel}">
      <Grid>
        <TextBlock Text="{Binding Name}"></TextBlock>
      </Grid>
    </DataTemplate>
  </UserControl.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
    </Grid.RowDefinitions>
    <Grid Grid.Row="0" Style="{StaticResource SpacingGrid}">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"></ColumnDefinition>
        <ColumnDefinition Width="Auto"></ColumnDefinition>
        <ColumnDefinition Width="Auto"></ColumnDefinition>
        <ColumnDefinition Width="Auto"></ColumnDefinition>
        <ColumnDefinition Width="Auto"></ColumnDefinition>
        <ColumnDefinition Width="Auto"></ColumnDefinition>
      </Grid.ColumnDefinitions>
      <TextBlock Text="Section:"></TextBlock>
      <ComboBox Grid.Column="1" ItemsSource="{Binding MemorySections}" SelectedItem="{Binding SelectedSection}"></ComboBox>
      <TextBlock Grid.Column="2" Text="Address:"></TextBlock>
      <ComboBox Grid.Column="3" ItemsSource="{Binding AddressFormats}" SelectedItem="{Binding SelectedValueFormat}"></ComboBox>
      <TextBlock Grid.Column="4" Text="Value:"></TextBlock>
      <ComboBox Grid.Column="5" ItemsSource="{Binding ValueFormats}" SelectedItem="{Binding SelectedValueFormat}"></ComboBox>
    </Grid>
    <Grid Grid.Row="1" Style="{StaticResource SpacingGrid}">
      <ListView  ItemsSource ="{Binding MemoryWords}" SelectedIndex="{Binding SelectedAddress, Mode=TwoWay}"></ListView>
    </Grid>
    <Grid Margin="5" Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="Auto"></ColumnDefinition>
        <ColumnDefinition Width="Auto"></ColumnDefinition>
      </Grid.ColumnDefinitions>
      <Button Grid.Column="1" Content="Read" Command="{Binding ReadCommand}"></Button>
      <Button Grid.Column="2" Content="Write" Command="{Binding WriteCommand}"></Button>
    </Grid>
  </Grid>
</UserControl>
